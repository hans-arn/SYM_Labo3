<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/Card"
        android:layout_width="362dp"
        android:layout_height="58dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9083ADCF">

            <TextView
                android:id="@+id/RSSItitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSSI:"
                app:layout_constraintBottom_toTopOf="@+id/majmin"
                app:layout_constraintStart_toStartOf="@+id/UUIDtitle"
                app:layout_constraintTop_toBottomOf="@+id/UUIDtitle" />

            <TextView
                android:id="@+id/UUID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="AAAAAAAA-AAAA-AAAA-AAAA-AAAAAAAA"
                app:layout_constraintStart_toEndOf="@+id/UUIDtitle"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/UUIDtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="UUID:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/majeurmineur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="majeur - mineur"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/majmin" />

            <TextView
                android:id="@+id/RSSI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="RSSI"
                app:layout_constraintBottom_toTopOf="@+id/majeurmineur"
                app:layout_constraintStart_toEndOf="@+id/RSSItitle"
                app:layout_constraintTop_toBottomOf="@+id/UUIDtitle"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/Distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="distance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.367"
                app:layout_constraintStart_toEndOf="@+id/majeurmineur" />

            <TextView
                android:id="@+id/distanceUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="meters"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Distance" />

            <TextView
                android:id="@+id/majmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="maj-min:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/RSSItitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>